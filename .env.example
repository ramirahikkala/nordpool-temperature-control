# Home Assistant Configuration
HA_URL=https://ha.ketunmetsa.fi
HA_API_TOKEN=your_token_here

# Sensors and Entities
PRICE_SENSOR=sensor.nordpool_kwh_fi_eur_3_10_0255
SWITCH_ENTITY=switch.shelly1minig3_5432044efb74
TEMPERATURE_SENSOR=sensor.your_temperature_sensor  # Current temperature sensor

# Temperature Control Settings
# BASE_TEMPERATURE: Fallback value if BASE_TEMPERATURE_INPUT is not set
BASE_TEMPERATURE=21.0
# BASE_TEMPERATURE_INPUT: Optional input_number entity to read base temperature from HA UI
# Example: input_number.heating_base_temperature
BASE_TEMPERATURE_INPUT=
# SETPOINT_OUTPUT: Optional input_number entity to write calculated setpoint to HA
SETPOINT_OUTPUT=

PRICE_LOW_THRESHOLD=10.0
PRICE_HIGH_THRESHOLD=20.0
TEMP_VARIATION=0.5

# Central Heating Control Settings (Optional)
# CENTRAL_HEATING_SHUTOFF_SWITCH: Switch that blocks central heating when ON (leave empty to disable)
# NOTE: When this switch is ON, central heating is blocked/OFF. When OFF, heating runs normally.
# Example: switch.central_heating_shutoff or switch.heating_block
CENTRAL_HEATING_SHUTOFF_SWITCH=
# MAX_SHUTOFF_HOURS: Maximum hours per day to block central heating during expensive periods
MAX_SHUTOFF_HOURS=6.0
# PRICE_ALWAYS_ON_THRESHOLD: Below this price (c/kWh), always keep central heating on (never block)
PRICE_ALWAYS_ON_THRESHOLD=5.0
